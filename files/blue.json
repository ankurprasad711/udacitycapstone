{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
      "name": "blue",
      "labels": {
        "app": "blue"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "app": "blue"
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "blue"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "blue",
              "image": "ankurprasad711/myfirstapp:latest",
              "ports": [
                {
                  "name": "server-blue",
                  "containerPort": 80
                }
              ]
            }
          ]
        }
      }
    }
}
